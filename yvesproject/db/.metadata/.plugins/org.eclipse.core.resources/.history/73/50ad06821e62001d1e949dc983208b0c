package com.mycompany.gestaofuncionarios.model;

import java.time.LocalDate;

public class Bonus {
	private Double valor;
	private LocalDate data;
	private String tipo;
	
	public Bonus(Double valor, String tipo, LocalDate data) {
		this.valor = valor;
		this.tipo = tipo;
		this.data = data;
	}

	public Double getValor() {
		return valor;
	}

	public LocalDate getData() {
		return data;
	}

	public String getTipo() {
		return tipo;
	}
}
