package states;

import presenter.CalculadoraBonusPresenter;

public class CalculadoraBonusVisualizacaoStates extends CalculadoraBonusStates {
	private CalculadoraBonusPresenter calculadoraBonus;
	
	public CalculadoraBonusVisualizacaoStates(CalculadoraBonusPresenter calculadoraBonus) {
		super(calculadoraBonus);
		desabilitarVisualizacoesAnteriores();
	}



	@Override
	public void visualizar() throws Exception {
		this.calculadoraBonus.setCalculadoraState(new CalculadoraBonusCalculoState(this.calculadoraBonus));
	}

	@Override
	public void desabilitarVisualizacoesAnteriores() {
		this.calculadoraBonus.getViewCalculadoraBonus().getTableFuncionarios().setVisible(false);
		this.calculadoraBonus.getViewCalculadoraBonus().getBtnBuscar().setVisible(false);
		this.calculadoraBonus.getViewCalculadoraBonus().getBtnListarTodos().setVisible(false);
		this.calculadoraBonus.getViewCalculadoraBonus().getBtnCalcular().setVisible(false);
		this.calculadoraBonus.getViewCalculadoraBonus().getTextDataDosFuncionarios().setVisible(false);
		this.calculadoraBonus.getViewCalculadoraBonus().getLblDataCalculo().setVisible(false);
	}
	
}
