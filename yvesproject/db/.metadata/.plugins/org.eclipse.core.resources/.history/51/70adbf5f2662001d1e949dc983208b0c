package model;

import java.time.LocalDate;

public class CalculaBonusPorDistancia implements ICalculaBonus {

	@Override
	public void calcular(Funcionario func) {
		
		if(func.getDistTrab() > 50 && func.getDistTrab() < 100) {
			func.addBonus(
					func.getSalario()*0.1, "Bônus por distância", LocalDate.now()
					);
		}
	}

}
