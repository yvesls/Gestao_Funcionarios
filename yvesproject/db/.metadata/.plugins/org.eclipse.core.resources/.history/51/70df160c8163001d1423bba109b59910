package service;

import model.Bonus;
import model.Funcionario;
import model.ICalculaBonus;

public class CalculadoraBonusService {
	private Funcionario func;
	private ICalculaBonus bonusCalculos;
	
	public CalculadoraBonusService(){
		
	}
	
	public void addFuncionario(Funcionario func) {
		this.func = func;
	}
	
	public void addBonus(ICalculaBonus bonus) {
		this.bonusCalculos = bonus;
	}
	
	public void calcular() {
		this.bonusCalculos.calcular(this.func);
	}
}
