package com.mycompany.gestaofuncionarios.states;

import com.mycompany.gestaofuncionarios.presenter.ManterFuncionarioPresenter;

public class FuncionarioVisualizacaoStates extends FuncionarioStates {

	public FuncionarioVisualizacaoStates(ManterFuncionarioPresenter funcManterPresenter) {
		super(funcManterPresenter);
		
		funcManterPresenter.getViewManterFuncionario().getLblNome().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblCargo().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblIdade().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblAdmissao().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblSalario().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblDistanciaTrab().setVisible(true);
		funcManterPresenter.getViewManterFuncionario().getLblIdFunc().setVisible(true);
		
		funcManterPresenter.getViewManterFuncionario().getLblNome().setText(funcManterPresenter.getFunc().getNome());
		funcManterPresenter.getViewManterFuncionario().getLblCargo().setText(funcManterPresenter.getFunc().getCargo());
		funcManterPresenter.getViewManterFuncionario().getLblIdade().setText(String.valueOf(funcManterPresenter.getFunc().getIdade()));
		funcManterPresenter.getViewManterFuncionario().getLblAdmissao().setText(funcManterPresenter.getFunc().getAdmissao());
		funcManterPresenter.getViewManterFuncionario().getLblSalario().setText(String.valueOf(funcManterPresenter.getFunc().getSalario()));
		funcManterPresenter.getViewManterFuncionario().getLblDistanciaTrab().setText(String.valueOf(funcManterPresenter.getFunc().getDistTrab()));
		funcManterPresenter.getViewManterFuncionario().getLblIdFunc().setText(String.valueOf(funcManterPresenter.getFunc().getFuncId()));
	}

	@Override
	public void editar() {
		this.funcManterPresenter.setFuncionarioState(new FuncionarioEditaState(this.funcManterPresenter));
	}
	
	@Override
	public void excluir() {
		
	}
}
