package presenter;

import states.CalculadoraBonusStates;
import states.FuncionarioStates;
import states.FuncionarioVisualizacaoStates;
import view.ViewCalculadoraBonus;

public class CalculadoraBonusPresenter {
	private ViewCalculadoraBonus view;
	private CalculadoraBonusStates state;
	
	public CalculadoraBonusPresenter(ViewCalculadoraBonus view) {
		this.setCalculadoraBonusState(new FuncionarioVisualizacaoStates(this));
	}
	
	public ViewCalculadoraBonus getViewCalculadoraBonus() {
		return view;
	}
	
	public void setCalculadoraBonusState(CalculadoraBonusStates funcState) {
		this.state = funcState;
	}
}
